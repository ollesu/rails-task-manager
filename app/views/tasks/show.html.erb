<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed == true %>
  <i class="fas fa-check-circle"></i><p>This task has been completed</p>
     <% else %>
      <i class="far fa-circle"></i> <p>This task has not been completed yet</p>
      <% end %>

<%= link_to "Homepage", tasks_path %>

<%= link_to "Edit this task", edit_path(@task)   %>

<%= link_to "Delete this task", task_path(@task), method: :delete  %>
